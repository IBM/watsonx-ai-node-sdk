{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es5", "es2015", "dom", "scripthost"],
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@ibm-cloud/watsonx-ai": ["../watsonx-ai-ml"]
    },
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/sdk/**/*", "src/external/**/*", "test/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
