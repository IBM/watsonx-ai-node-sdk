{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "lib": ["es6", "es5", "es2015", "dom", "scripthost"],
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": false,
    "allowJs": true
  }
}
